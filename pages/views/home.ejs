<!DOCTYPE html>
<html>
<head>
  <title>Home</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .grid{display:grid; gap:12px; grid-template-columns: repeat(auto-fill,minmax(220px,1fr))}
    .tile{background:var(--panel); border:1px solid var(--border); border-radius:12px; padding:16px}
    .kpi{font-size:28px; font-weight:700; margin:2px 0 6px}
    .muted{color:var(--muted); font-size:14px}
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="container" style="max-width:980px;">
    <div class="card">
      <h2 style="margin:0 0 12px">Insights</h2>
      <div class="grid">
        <div class="tile">
          <div class="kpi"><%= insights.totalProjects %></div>
          <div class="muted">Total Projects</div>
        </div>
        <div class="tile">
          <div class="kpi"><%= insights.totalAgile %></div>
          <div class="muted">Agile</div>
        </div>
        <div class="tile">
          <div class="kpi"><%= insights.totalWaterfall %></div>
          <div class="muted">Waterfall</div>
        </div>
        <div class="tile">
          <div class="kpi"><%= insights.totalUsers %></div>
          <div class="muted">Approved Users</div>
        </div>

        <% if (user) { %>
          <div class="tile">
            <div class="kpi"><%= insights.myProjectsCount %></div>
            <div class="muted">My Projects</div>
          </div>
          <div class="tile">
            <div class="kpi"><%= insights.myAssignmentsCount %></div>
            <div class="muted">My Assignments</div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
