<!DOCTYPE html>
<html>
<head>
  <title>Stakeholders — <%= project.name %></title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .muted{color:var(--muted); font-size:13px}
  </style>
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/dashbar', { user }) %>

  <div class="container">
    <div class="header">
      <h1>Stakeholders Analysis • <%= project.name %></h1>
      <div class="row">
        <a class="btn btn-outline" href="/projects/<%= project.id %>/preinit">Back to Pre-Initiation</a>
      </div>
    </div>

    <div class="card">
      <h3 style="margin-top:0">Business Analysts</h3>
      <% if (!businessAnalysts || businessAnalysts.length===0) { %>
        <p class="muted">No Business Analysts assigned.</p>
      <% } else { %>
        <table class="table">
          <thead><tr><th>Name</th><th>Email</th><th>Role</th></tr></thead>
          <tbody>
            <% businessAnalysts.forEach(function(a){ %>
              <tr>
                <td><%= a.user.name || '-' %></td>
                <td><%= a.user.email %></td>
                <td><%= a.role.name %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </div>

    <div class="card">
      <h3 style="margin-top:0">Stakeholders</h3>
      <% if (!stakeholders || stakeholders.length===0) { %>
        <p class="muted">No Stakeholders assigned yet.</p>
      <% } else { %>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th><th>Email</th><th>Role</th>
              <!-- هنزوّد Power/Interest بعدين -->
            </tr>
          </thead>
          <tbody>
            <% stakeholders.forEach(function(a){ %>
              <tr>
                <td><%= a.user.name || '-' %></td>
                <td><%= a.user.email %></td>
                <td><%= a.role.name %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
      <p class="muted">* هنضيف Matrix (Power/Interest) وتصنيفات RACI في الخطوة الجاية.</p>
    </div>
  </div>
</body>
</html>
