<!DOCTYPE html>
<html>
<head>
  <title>Sign up</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container" style="max-width:600px">
    <h1>Sign up</h1>
    <% if (error) { %><div class="card" style="border-left:4px solid #ef4444"><%= error %></div><% } %>
    <form method="POST" action="/signup">
      <div class="field"><label>Name</label><input class="input" type="text" name="name"></div>
      <div class="field"><label>Email</label><input class="input" type="email" name="email" required></div>
      <div class="field"><label>Password</label><input class="input" type="password" name="password" required></div>
      <div class="field">
        <label>Role</label>
        <select class="input" name="roleId" required>
          <option value="">-- Select Role --</option>
          <% (roles || []).forEach(function(r){ %>
            <option value="<%= r.id %>"><%= r.name %></option>
          <% }) %>
        </select>
      </div>
      <button class="btn" type="submit">Create account</button>
      <a class="btn btn-outline" href="/login" style="margin-left:8px">Login</a>
    </form>
  </div>
</body>
</html>
